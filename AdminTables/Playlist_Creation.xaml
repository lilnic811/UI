<UserControl x:Class="UI.Tables.Playlist_Creation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Tables"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition MaxWidth="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="20"/>
            <RowDefinition MaxHeight="80"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition MaxHeight="20"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Playlist Name: " Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" FontSize="40" Foreground="White"/>
        <TextBox Name="PlaylistText" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" FontSize="25"  Margin="10, 0, 10, 0"/>

        <Button Name="Save_Button" Content="Save" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="25" FontSize="48" Click="Save_Button_Click"/>
        <Button Name="Back_Button" Content="Back" Grid.Row="3" Grid.Column="3" Margin="25" FontSize="48" Click="Back_Button_Click"/>
    </Grid>
</UserControl>
