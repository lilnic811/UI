<UserControl x:Class="UI.UserHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition MaxWidth="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition MaxHeight="20"/>

        </Grid.RowDefinitions>

        <TextBlock Name="HelloText" Text="Hello, Name!" Foreground="White" FontSize="72"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Name="Query_Button" Content="Search Database" FontSize="40" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" Click="Query_Button_Click"/>
        <Button Name="Add_Artist_Button" Content="Add Artist" FontSize="40" Grid.Row="3" Grid.Column="2" Margin="10" Click="Add_Artist_Button_Click"/>
        <Button Name="Add_Album_Button" Content="Add Album" FontSize="40" Grid.Row="3" Grid.Column="1" Margin="10" Click="Add_Album_Button_Click"/>
        <Button Name="Add_Genre_Button" Content="Add Genre" FontSize="40" Grid.Row="4" Grid.Column="3" Margin="10" Click="Add_Genre_Button_Click"/>
        <Button Name="Add_Song_Button" Content="Add Song" FontSize="40" Grid.Row="3" Grid.Column="3" Margin="10" Click="Add_Song_Button_Click"/>
        <Button Name="Add_Playlist_Button" Content="Add Playlist" FontSize="40" Grid.Row="4" Grid.Column="1" Margin="10" Click="Add_Playlist_Button_Click"/>
        <Button Name="Add_Provider_Button" Content="Add Provider" FontSize="40" Grid.Row="4" Grid.Column="2" Margin="10" Click="Add_Provider_Button_Click"/>
        <Button Name="Logout_Button" Content="Logout" FontSize="40" Grid.Row="5" Grid.Column="3" Margin="10" Click="Logout_Button_Click"/>

        <Border Name="OverrideBorder" Grid.Column="0" Grid.Row="0" Grid.RowSpan="7" Grid.ColumnSpan="5"/>
    </Grid>
</UserControl>
